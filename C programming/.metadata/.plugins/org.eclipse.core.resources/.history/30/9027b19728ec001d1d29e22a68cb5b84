#include<stdio.h>
#include<string.h>

char Reverse(char , int);

int main()
{
	int length =0; char str[100] =0;
	printf("Enter the string you wanna reverse:");
	gets(str);

	Reverse(str,strlen(str));
	return 0;
}

char Reverse(char arr[], int i)
{
	if(i==0)
	{
		return arr[i];
	}
	else
	{
		printf("%c", arr[i]);
		--i;
		return(arr, i);
	}
}
