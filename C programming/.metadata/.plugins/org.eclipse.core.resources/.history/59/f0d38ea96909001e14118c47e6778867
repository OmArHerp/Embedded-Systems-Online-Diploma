#include<stdio.h>
#include<stdlib.h>


struct SCredits {
	char name[50];
	int roll;
	int marks;
};
int main()
{
	struct SCredits student[10]; int i;

	for(i=0; i<10 ; ++i)
	{
		printf("\nEnter student number %d  name,roll and marks respectively : ",i+1);
		fflush(stdin);fflush(stdout);
		gets(student[i].name);
		scanf("%d%d",&student[i].roll,&student[i].marks);
	}

	for(i=0; i<10 ; ++i)
		{
			printf("\nstudent number %d  name : %s\n,roll : %d \n and marks : %d \n respectively : ",i+1, student[i].name, student[i].roll,student[i].marks);
		}




	printf("Displaying Information\n %s \n %d \n %d",student.name,student.roll,student.marks);

	return 0;
}


